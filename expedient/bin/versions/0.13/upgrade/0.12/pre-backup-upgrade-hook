#inform user
printHeader "info#" "Using specific 0.12-0.13 post-upgrade-hook module..."

#Call Rebase pointers to solve BUG
#$EXECPATH/versions/default/upgrade/tools/UpgradeTools.py rebasePointers

SRC_DIR=/opt/ofelia/expedient/
EMAIL_PATTERNS="EMAIL_ DEFAULT_EMAIL"


local TMP_PATH=$PWD

cd $SRC_DIR/src/python/expedient/clearinghouse/ || error "Target directory does not exit anymore?Â¿"

#Adding/Moving new variables to localsettings.py
printHeader ">" "Adding new settings to localsettings.py ..."
echo "AUTH_LDAP_BIND_PASSWORD = \"changeme\"" >> localsettings-PRUEBA.py || error "Could not add AUTH_LDAP_BIND_PASSWORD to localsettngs.py ..."
echo "ALLOW_LOCAL_REGISTRATION = False" >> localsettings-PRUEBA.py || error "Could not add ALLOW_LOCAL_REGISTRATION to localsettngs.py ..."


for pattern in $EMAIL_PATTERNS
do
    sed -i "/$pattern/d" localsetting.py || error "Could not delete EMAIL settings from localsettngs.py ..."
done


#Restarting apache
print "Restarting apache2..."
/usr/sbin/service apache2 restart

